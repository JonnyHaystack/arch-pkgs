    'xdotool'
    'xsel'
    'xclip'
    'lightdm'
    'lightdm-slick-greeter'
    'lightdm-settings'
    'arc-gtk-theme'
    'papirus-icon-theme'
    'lxappearance'
    'qt5ct'
    'qt5-styleplugins'
    'i3-gaps'
    'i3lock-color'
    'i3-resurrect-git'
    'i3-easyfocus-git'
    'i3tree-git'
    'polybar-git'
    'hideit.sh-git'
    'unclutter'
    'picom'
    'dunst'
    'rofi'
    'rofi-calc'
    'transset-df'
    'alacritty'
    'guake'
    'qutebrowser'
    'python-tldextract'
    'python-pyperclip'
    'chromium-widevine'
    'telegram-desktop'
    'caprine'
    'network-manager-applet'
    'openvpn'
    'networkmanager-openvpn'
    'nordvpn-bin'
    'wireguard-dkms'
    'wireguard-tools'
    'networkmanager-wireguard-git'
    'udiskie'
    'simple-scan'
    'gtklp'
    'system-config-printer'
    'transgui-gtk'
    'transmission-cli'
    'bitwarden-bin'
    'pulseaudio'
    'pulseaudio-zeroconf'
    'paprefs'
    'pavucontrol'
    'alsa-lib'
