pkgrel=1
pkgdesc="Desktop packages for my Arch installations"
arch=('any')
url="https://github.com/JonnyHaystack/arch-pkgs"
license=('GPL')
install=haystack-desktop.install
depends=(
    'haystack-base'
    'xorg-server'
    'xorg-xrandr'
