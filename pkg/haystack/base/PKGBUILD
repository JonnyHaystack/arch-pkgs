# Maintainer: Jonathan Haylett <jonathan@haylett.dev>
pkgname=haystack-base
pkgver=0.0.1
pkgrel=1
pkgdesc="Base system configuration for my Arch installations"
arch=('any')
url="https://github.com/JonnyHaystack/arch-pkgs"
license=('GPL')
install=haystack-base.install

rootdir=$PWD

package() {
    depends=(
        'base'
        'linux'
        'linux-firmware'
        'grub'
        'coreutils'
        'binutils'
        'util-linux'
        'procps-ng'
        'glibc'
        'file'
        'rsync'
        'tar'
        'gzip'
        'xz'
        'bzip2'
        'zip'
        'unzip'
        'p7zip'
        'which'
        'less'
        'findutils'
        'fd'
        'diffutils'
        'iputils'
        'traceroute'
        'gnu-netcat'
        'grep'
        'sed'
        'patch'
        'gawk'
        'jq'
        'bash'
        'zsh'
        'tmux'
        'ranger'
        'gptfdisk'
        'parted'
        'htop'
        'os-prober'
        'ntfs-3g'
        'lvm2'
        'net-tools'
        'wireless_tools'
        'networkmanager'
        'sudo'
        'wget'
        'curl'
        'git'
        'yay'
        'pkgfile'
        'man-db'
        'man-pages'
        'texinfo'
        'openssh'
        'neovim'
        'lshw'
        'lm_sensors'
        'pciutils'
        'usbutils'
        'kernel-modules-hook'
        'nfs-utils'
        'samba'
        'smbclient'
        'ntp'
        'autofs'
        'sssd'
        'nss-pam-ldapd'
        'krb5'
        'pam-krb5'
        'logrotate'
    )

    # sudoers
    install -Dm 0640 "$rootdir/sudoers.wheel" "$pkgdir/etc/sudoers.d/wheel"

    # systemd unit files
    install -Dm 0644 "$rootdir/systemd/"* -t "$pkgdir/etc/systemd/system"

    # bin files
    install -Dm 0755 "$rootdir/bin/reboot" "$pkgdir/usr/local/bin/reboot"
    install -Dm 0755 "$rootdir/bin/shutdown" "$pkgdir/usr/local/bin/shutdown"
    install -Dm 0755 "$rootdir/bin/poweroff" "$pkgdir/usr/local/bin/poweroff"
}
